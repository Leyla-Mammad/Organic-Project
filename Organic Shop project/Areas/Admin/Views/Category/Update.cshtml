@using Organic_Shop_project.Models;
@model Category

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Update Category</div>
            <hr>
            <form method="post" asp-action="Update" asp-area="admin" asp-controller="category">
                <div class="form-group">
                    <label asp-for="Title">Name</label>
                    <input asp-for="Title" placeholder="Enter Name">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i>Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>