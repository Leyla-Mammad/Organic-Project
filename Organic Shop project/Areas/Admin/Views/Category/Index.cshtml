@using Organic_Shop_project.Models;
@model List<Category>


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div style="display:flex;justify-content:space-between; align-items: center;margin-bottom:5px;">
                <h5 class="card-title">Category</h5>
                <div class="col-2">
                    <a asp-controller="Category" asp-action="Create" asp-area="admin" class="btn btn-outline-success" style="background-color: green; ">
                        Create Category
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach ( var category in Model)
                        {
                            <tr>
                                <th>@category.Id</th>
                                
                                <td>@category.Title</td>
                                <td >
                                        <a class="btn btn-outline-warning" asp-action="update" asp-controller="category" asp-area="admin" asp-route-id="@category.Id">Edit</a>
                                    <form method="post" asp-controller="Category" asp-action="Delete" asp-area="Admin" asp-route-id="@category.Id">
                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                    </form>
                                   
                                </td>
                            </tr>

                        }


                    </tbody>
                   
                </table>
            </div>
        </div>
    </div>
</div>